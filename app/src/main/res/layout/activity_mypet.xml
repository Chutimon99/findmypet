<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66CDAA"
    android:orientation="vertical"
    tools:context=".Mypet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/UploadPet"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/iconpet"
            app:shapeAppearanceOverlay="@style/Circular"/>

        <TextView
            android:id="@+id/imageUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="เพิ่มภาพสัตว์"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#FFF8DC"
            android:textSize="18sp"/>


        <EditText
            android:id="@+id/namepet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_login"
            android:backgroundTint="#FFF8DC"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic__6380692781536039568"
            android:drawableTint="#CD5C5C"
            android:hint="ชื่อสัตว์เลี้ยง"
            android:padding="10dp"
            android:textColorHint="#CD5C5C"
            android:textDirection="ltr"
            android:textSize="18sp" />

        <TextView
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_login"
            android:backgroundTint="#CD5C5C"
            android:padding="8dp"
            android:text="ประเภทของสัตว์เลี้ยง"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />



        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            >
            <RadioButton
                android:id="@+id/cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="แมว"
                android:textColor="#FFF8DC"/>

            <RadioButton
                android:id="@+id/dog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="สุนัข"
                android:textColor="#FFF8DC"
                />
        </RadioGroup>

        <EditText
            android:id="@+id/breed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_login"
            android:backgroundTint="#FFF8DC"
            android:drawableLeft="@drawable/ic_baseline_question_mark_24"
            android:drawableTint="#CD5C5C"
            android:drawablePadding="20dp"
            android:hint="พันธุ์ของสัตว์"
            android:padding="10dp"
            android:textColorHint="#CD5C5C"
            android:textDirection="ltr"
            android:textSize="18sp" />

        <Button
            android:id="@+id/BtnUpload"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_login"
            android:backgroundTint="#CD5C5C"
            android:hint="บันทึก"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="@color/white"
            android:textDirection="ltr"
            android:textSize="16sp" />




    </LinearLayout>
</LinearLayout>
